<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">
  
 <com.getbase.floatingactionbutton.FloatingActionsMenu
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentEnd="true"
     android:layout_margin="25dp"
     android:layout_alignParentBottom="true"
     app:fab_addButtonColorNormal="@color/brown"
     app:fab_labelStyle="@style/custom_floating_buttons"
     >
     <com.getbase.floatingactionbutton.FloatingActionButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:fab_icon="@drawable/instagram"
         app:fab_title="instagram"
         android:id="@+id/instagram"
         app:fab_colorNormal="@color/green"/>
     <com.getbase.floatingactionbutton.FloatingActionButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:fab_icon="@drawable/twitter"
         app:fab_title="twitter"
         android:id="@+id/twitter"
         app:fab_colorNormal="@color/green"/>
     <com.getbase.floatingactionbutton.FloatingActionButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:fab_icon="@drawable/gmail"
         app:fab_title="gmail"
         android:id="@+id/gmail"
         app:fab_colorNormal="@color/green"/>

     <com.getbase.floatingactionbutton.FloatingActionButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:fab_icon="@drawable/facebook"
         app:fab_title="facebook"
         android:id="@+id/facebook"
         app:fab_colorNormal="@color/green"/>



 </com.getbase.floatingactionbutton.FloatingActionsMenu>



</RelativeLayout>